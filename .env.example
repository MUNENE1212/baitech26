# MongoDB Configuration
# For local development, use localhost
MONGO_URL=mongodb://localhost:27017
# For production, use MongoDB Atlas connection string
# MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/dbname?appName=AppName
MONGO_DB=baitekdb

# Security - CRITICAL: Generate a new secret key!
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_SECRET_KEY

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Frontend URL (update for production)
FRONTEND_URL=http://localhost:3000

# CORS Origins (comma-separated, update for production)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Environment
ENVIRONMENT=development

# Logging
LOG_LEVEL=DEBUG
