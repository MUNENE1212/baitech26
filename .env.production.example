# Production Environment Variables for Backend
# Copy this to .env and fill in your production values

# MongoDB Configuration (Use MongoDB Atlas for production)
MONGO_URL=mongodb+srv://USERNAME:PASSWORD@CLUSTER.mongodb.net/DBNAME?appName=AppName
MONGO_DB=baitekdb

# Security (Generate new secret key for production!)
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_NEW_SECRET_KEY_IN_PRODUCTION

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Frontend URL (Update with your domain)
FRONTEND_URL=https://yourdomain.com

# CORS Origins (Update with your domain)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Environment
ENVIRONMENT=production

# Logging
LOG_LEVEL=INFO
